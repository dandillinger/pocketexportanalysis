# Pocket API Configuration
# Copy this file to .env and fill in your actual credentials

# Your Pocket API Consumer Key (required)
# Get this from: https://getpocket.com/developer/apps/new
POCKET_CONSUMER_KEY=your_consumer_key_here

# Your Pocket API Access Token (required)
# This will be obtained automatically when you run --auth-setup
POCKET_ACCESS_TOKEN=your_access_token_here

# Your Pocket App ID (optional, auto-detected from consumer key)
# This is the first part of your consumer key (before the hyphen)
POCKET_APP_ID=your_app_id_here

# Optional: Custom redirect URI for OAuth
# Format: pocketapp[YOUR_APP_ID]:authorizationFinished
POCKET_REDIRECT_URI=pocketapp[YOUR_APP_ID]:authorizationFinished

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Rate limiting delay in seconds (default: 1.5)
RATE_LIMIT_DELAY=1.5 